def zigzag(a):
    k = []
    count = 1
    if len(a) <=2: 
        if len(a) ==1:
            return 1
        for x in range(len(a)): 
            if a[x] == a[x+1]:
                return 1
            if a[x] != a[x+1]:
                return 2
    for x in range(1,len(a)-1):
        if a[x-1] < a[x] > a[x+1] or a[x-1] > a[x] < a[x+1]:
            k.append(a[x])
    for x in range(len(k)-1):
        if k[x-1] < k[x] > k[x+1] or k[x-1] > k[x] < k[x+1]:
            count +=1
    return count
